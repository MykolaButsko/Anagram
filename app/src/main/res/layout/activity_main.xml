<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/mulish_bold"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,VisualLintOverlap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/enterTextForAnagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:hint="@string/enter_text_for_anagram"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:fontFamily="@font/mulish_regular"
            tools:ignore="Autofill,MissingConstraints,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/enterSymbolsToIgnore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="@string/enter_symbols_to_ignore"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:fontFamily="@font/mulish_regular"
            tools:ignore="Autofill,MissingConstraints,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/yourAnagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:freezesText="true"
            android:gravity="center"
            android:minLines="2"
            android:text="@string/here_must_be_your_anagram"
            android:textSize="18sp"
            android:fontFamily="@font/mulish_bold"
            tools:ignore="MissingConstraints,TextSizeCheck" />

        <Button
            android:id="@+id/convertButton"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/orange"
            android:text="@string/convert"
            android:fontFamily="@font/mulish_bold"
            tools:ignore="MissingConstraints,TextContrastCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>